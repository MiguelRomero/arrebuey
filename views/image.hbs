<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-tittle">Cargar una imagen</h3>
    </div>
</div>
<form method="post" action="/images/create" enctype="multipart/form-data">

<div class="panel-body form-horizontal">

    <div class = "form-group col-md-12">
        <label for="file" class="col-md-2 control-label">Cargar archivo</label>
        <div class="col-md-10">
            <input class = "form-control" type="file" name="file" id = "file">

        </div>
    </div>
    <div class = "form-group col-md-12">
        <label for="tittle" class="col-md-2 control-label">Titulo de la imagen</label>
        <div class="col-md-10">
            <input class = "form-control" type="text" name="tittle" id = "tittle">

        </div>
    </div>
    <div class = "form-group col-md-12">
        <label for="description" class="col-md-2 control-label">Descripcion</label>
        <div class="col-md-10">
            <textarea name="description" id="description" class="form-control" rows="2">

            </textarea>
        </div>
    </div>

</div>

</form>
</div>